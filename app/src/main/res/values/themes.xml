<?xml version="1.0" encoding="utf-8"?>
<!-- themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Setoranhafalanapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Tema Hijau Utama -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Warna Sekunder -->
        <item name="colorSecondary">@color/green_accent</item>
        <item name="colorSecondaryVariant">@color/green_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Warna Surface dan Background -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>

        <!-- Warna untuk Button -->
        <item name="materialButtonStyle">@style/CustomButtonStyle</item>
    </style>

    <!-- Style khusus untuk Button dengan warna hijau -->
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/green_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>